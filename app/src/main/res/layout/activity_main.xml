<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--  Calculator out put section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:orientation="vertical"
        android:background="#F6F5F8"
        android:padding="18dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/calculator_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="00"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>


    </LinearLayout>

    <!-- Calculator input section   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDF1F4"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/function_button_design"
                android:gravity="center"
                android:padding="12dp"
                android:text="C"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/function_button_design"
                android:gravity="center"
                android:padding="12dp"
                android:text="Del"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/percent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/function_button_design"
                android:gravity="center"
                android:padding="12dp"
                android:text="%"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/division"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/function_button_design"
                android:gravity="center"
                android:padding="12dp"
                android:text="/"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/number_seven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="7"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_eight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="8"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_nine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="9"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/function_button_design"
                android:gravity="center"
                android:padding="12dp"
                android:text="Ã—"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/number_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="4"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="5"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="6"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/function_button_design"
                android:gravity="center"
                android:padding="12dp"
                android:text="+"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/number_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="1"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="2"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="3"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/function_button_design"
                android:gravity="center"
                android:padding="12dp"
                android:text="â€“"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/double_zero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="00"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="0"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/multiply_dot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/number_input_button"
                android:gravity="center"
                android:padding="12dp"
                android:text="."
                android:textSize="28sp" />

            <TextView
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/function_button_design"
                android:gravity="center"
                android:padding="12dp"
                android:text="="
                android:textSize="28sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
</RelativeLayout>